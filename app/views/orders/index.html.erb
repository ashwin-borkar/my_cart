<p id="notice"><%= notice %></p>

<h1>Orders</h1>
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr style ="background-color:pink; color:black; font-size: 14px;">
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order ,class:'btn btn-mini btn-primary'%></td>
        <td><%= link_to 'Edit', edit_order_path(order),class:'btn btn-mini btn-primary' %></td>
        <td><%= link_to 'Destroy', order_path, method: :delete, class:'btn btn-mini btn-primary', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Order', new_order_path , class:'btn btn-mini btn-warning'%>
