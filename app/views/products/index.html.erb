<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr style ="background-color:pink; color:black; font-size: 14px;">
      <th >Name</th>
      <th >Price</th>
      <th>stock </th>
      <th>Category</th>
      <th>Product Image</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <!-- <td><%#= product.price %></td> -->
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.stock %></td>
        <td><%= product.category.name %></td>
        <td><% if product.image.attached? %>
          <%= image_tag product.image , style: "height:50px; witdth:50px;" %>
          <% end %>
        </td>
        <% if current_user.admin_role? %>
          <td><%= link_to 'Show', product, class:'btn btn-mini btn-primary'%> | 
          <%= link_to 'Edit', edit_product_path(product), class:'btn btn-mini btn-success' %> |
          <%= link_to 'Destroy', product, method: :delete, class:'btn btn-mini btn-danger',data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= button_to "Add to Cart", order_items_path(product_id: product.id),class:'btn btn-mini btn-secondary' %></td>
          <td><%= link_to 'Show', product, class:'btn btn-mini btn-primary'%></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>
<% if current_user.admin_role? %>
<%= link_to 'New Product', new_product_path, class:'btn btn-mini btn-warning' %>
<% end %>
<%= link_to 'Back', authenticated_root_path, class:'btn btn-mini btn-warning' %>





