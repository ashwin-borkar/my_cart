<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= sprintf("$%2.2f", @product.price) %>
</p>

<p>
  <strong>stock:</strong>
  <%= @product.stock %>
</p>

<p>
  <strong>image:</strong>
	<% if @product.image.attached? %>
	<%= image_tag @product.image , style: "height:50px; witdth:50px;" %>
	<% end %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<%= link_to 'Edit', edit_product_path(@product) , method: :put, class:'btn btn-mini btn-info'%> |
<%= link_to 'Back', products_path , class:'btn btn-mini btn-info'%>
