<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
          <%= form_with(model: product, local: true) do |form| %>
            <% if product.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

                <ul>
                  <% product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= form.label :name %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="field">
              <%= form.label :price %>
              <%= form.text_field :price, class: "form-control" %>
            </div>

            <div class="field">
              <%= form.label :stock %>
              <%= form.text_field :stock, class: "form-control" %>
            </div>

            <div class="field">
              <%= form.label "Product Image" %>
              <%= form.file_field :image, class: "form-control" %>
            </div>
          
            <div class="field">
              <%= form.label :category_id %>
              <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name), include_blank: "Select Category", class: "form-control")%>
            </div>

            <div class="actions btn btn-primary">
              <%= form.submit %>
            </div>
          <% end %>
         </div>
          </div>
        </div>
      </div>
    </div>