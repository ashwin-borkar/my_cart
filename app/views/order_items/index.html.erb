<p id="notice"><%= notice %></p>

<h1>Order Items</h1>
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr style ="background-color:pink; color:black; font-size: 14px;">
      <th>Product</th>
      <th>Order</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.product_id %></td>
        <td><%= order_item.order_id %></td>
        <td><%= order_item.quantity %></td>

        <td><%= link_to order_item.quantity, edit_order_item_path(order_item) %></td>

        <td><%= link_to 'Show', order_item ,class:'btn btn-mini btn-primary'%></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item), class:'btn btn-mini btn-success'%></td>
        <td><%= link_to 'Destroy', order_item_path(order_item),class:'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<%= link_to 'New Order Item', new_order_item_path ,class:'btn btn-mini btn-warning'%>
