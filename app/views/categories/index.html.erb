<p id="notice"><%= notice %></p>

<h1>Categories</h1>
<div class="media">
  <div class="media-body">
<table class= "table table-hover">
  <thead>
    <tr style = " background-color:pink; color:black; font-size: 14px;"> 
      <th>Name</th>
      <th>Description</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.desc %></td>
        <td><%= link_to 'Show', category, class:'btn btn-mini btn-info' %></td>
        <% if current_user.admin_role? %>
          <td><%= link_to 'Edit', edit_category_path(category), class:'btn btn-mini btn-success' %></td>
          <td><%= link_to 'Destroy', category, method: :delete, class:'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<% if current_user.admin_role? %> 
  <%= link_to 'New Category', new_category_path , class:'btn btn-mini btn-warning' %>
<% end %>

